---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header";
import SocialMediaFooter from "../components/SocialMediaFooter";
---

<Layout>
  <Header />
  <main class="w-3/4 mx-auto h-screen flex flex-col justify-center items-center gap-2">
    <img
      src="/bitmoji.png"
      alt="Joshua Bitmoji Avatar"
      class="rounded-full border-2 border-secondary w-32"
    />
    <h1 class="text-2xl">Joshua Borseth</h1>
    <h2 class="text-md">Web Developer</h2>
    <div class="border-b-2 border-b-secondary w-3/4"></div>
    <p class="text-center text-sm">
      A passion for building user oriented, scalable, type safe applications.
    </p>
  </main>
  <SocialMediaFooter />
</Layout>
